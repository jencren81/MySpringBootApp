pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "M2_HOME"
    }

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/jencren81/MySpringBootApp.git'

                // Run Maven on a Unix agent.
                sh "./mvnw compile"

                echo 'building with maven compile'
            }
        }
        stage('Test'){
            steps{
            sh "./mvnw test"
            echo 'Testing Project with Maven Test'
            }
        }
        
        stage('Deploy'){
            steps{
            sh "//mvnw package"
            echo 'Deploying project with maven package'
            }
        }

            
    }
    }

